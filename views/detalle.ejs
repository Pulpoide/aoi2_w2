<%- include("template/header", {tituloWeb: 'Producto'}) %>
</head>
<body>
    <br>
    <div class="container"> 
      <div class="row">
      

      <h1 class="display-2">Detalle Producto</h1>
    </div>

      <br>
      <br>

      
        <table class="table table-hover">
            <thead >
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripci√≥n</th>
                <th scope="col">Precio</th>
                <th scope="col">Marca</th>
                <th scope="col">Stock</th>
                <!-- <th scope="col">Imagen</th> -->
                <th scope="col">Acciones</th>
              </tr>
            </thead>

            <tbody>

                <% if (productos.length > 0) { %>
                    <% productos.forEach(producto => { %>

                        <tr>
                            <th scope="row"><%= producto.codigo %></th>
                            <td><%= producto.nombre %></td>
                            <td><%= producto.descripcion %></td>
                            <td>$<%= producto.precio %></td>
                            <td><%= producto.marca %></td>
                            <td><%= producto.stock %></td>
                            <!-- <td></td> -->
                            <td> 
                              <a href="/producto/editar/<%= producto.codigo %>" class="btn btn-warning btn-sm">
                                Editar
                              </a>
                              <a id="btnEliminar" role="button" href="/productos" class="btn btn-danger btn-sm" data-code="<%= producto.codigo %>">
                                Eliminar
                              </a>
                            </td>
                        </tr>
                            
                    <% }) %>
                  <% } %>

                  
            </tbody>
          </table>
          <br>
          

          <a href="/productos"><button class="btn btn-dark">Volver</button></a>

          <br>
          <br>
          <br>
          <h3>Imagen:</h3>
          <br>
          <div class="d-flex align-items-center justify-content-center w-100">
            <!--  producto.producto.img %> -->
            <img src="http://localhost:8888/images/<%= productos[0].img %>">
          
          </div>

      
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>
</html>



<script>
    //import axios from 'axios';
