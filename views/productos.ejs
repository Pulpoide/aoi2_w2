<%- include("template/header", {tituloWeb: 'Productos'}) %>
</head>
<body>
    
    <div class="container"> 
      <h1>Productos:</h1>
      <a href="http://localhost:8888/producto/crear"><button class="btn btn-success btn-block">Agregar Producto</button></a>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripci√≥n</th>
                <th scope="col">Precio</th>
                <th scope="col">Marca</th>
                <th scope="col">Stock</th>
                <th scope="col">Imagen</th>
              </tr>
            </thead>
            <tbody>

                <% if (productos.length > 0) { %>
                    <% productos.forEach(producto => { %>

                        <tr>
                            <th scope="row"><%= producto.codigo %></th>
                            <td><%= producto.nombre %></td>
                            <td><%= producto.descripcion %></td>
                            <td>$<%= producto.precio %></td>
                            <td><%= producto.marca %></td>
                            <td><%= producto.stock %></td>
                            <td><%= producto.img %></td>
                        </tr>

                    <% }) %>
                  <% } %>

              
            </tbody>
          </table>

          <a href="http://localhost:8888/"><button class="btn btn-dark">Volver</button></a>



      
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>
</html>